{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "../webapp/src/*"
      ],
      "@webapp/*": [
        "../webapp/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": [
      "@types/google.maps",
      "@types/google.accounts"
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ],
  "ignores": [
    "**/tailwind.config.js",
    "**/postcss.config.js"
  ]
}
